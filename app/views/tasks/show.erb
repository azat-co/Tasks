<div class="offset2 span6">
	<div class="row">
		<h1><%= @task.title %></h1>
		<h3><%= @task.task_type.name %> - due at <%= @task.due_at.strftime("%m/%d/%Y %H:%M") %></h3>
	</div>
	<div class="row well">
		<h3>Details</h3>
		<% @task.values.each do |v| %>
			<div class="row">
				<div class="span4"><span class="bold"><%= v.field.name %>: </span><span><%= v.value %></span></div>
				</div>
		<% end %>
		
		
		
		</div>
		<div class="row">
			<%= link_to "List of tasks", root_path %>
		</div>
		
		
</div>